@page "/power"
@rendermode InteractiveServer

<h3>Power</h3>
<input type="number" @bind="number" @onclick="Calculate" />
<input type="number" @bind="exponent" @onclick="Calculate" />
<div>@N</div>

@code {
	double number;
	int exponent;
	double N;

	void Calculate()
	{
		N = 1;
		for (int i = 0; i < exponent; i++)
			N *= number;
	}
}
